<div id="wrapper">

<%= render 'partials/admin_breadcrumb' %>

<div class="content animate-panel">

<div class="row">
    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-body">

            <%= render 'partials/admin_notices' %>

                <div class="table-responsive">

                <% if @categories.exists? %>
                <table cellpadding="1" cellspacing="1" class="table">
                    <thead>
                    <tr>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Created at</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @categories.each do |category| %>
                    <tr>
                        <td><%= category.name %></td>
                        <td><%= category.description %></td>
                        <td><%= category.created_at.to_time.strftime("%B %e at %l:%M %p" ) %></td>
                        <td>
                         
                        <%= link_to "<i class='fa fa-paste'></i> Edit".html_safe, edit_admin_category_path(category), class:'btn btn-sm btn-info' %> 
                        
                        <%= link_to "<i class='fa fa-trash-o'></i> Delete".html_safe, admin_category_path(category), class:'btn btn-sm btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this category?' } %></td>
                     </tr>
					<% end %>

                    </tbody>
                </table>
					<% else %>
						<div class="panel-footer">
						You should create the first category.
						</div>
					<% end %>

			</div>

            </div>
            <div class="panel-footer">
				<div class="digg_pagination">
					<span class="page_info">
					  <%= page_entries_info @categories %>
					</span>
					<span class="pull-right">
						<%= will_paginate @categories, :container => false %>
					</span>
				</div>
        </div>
    </div>
</div>
<div class="row"></div>
<div class="row"></div>

</div>

</div>