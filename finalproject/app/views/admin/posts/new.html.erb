<div id="wrapper">

<%= render 'partials/admin_breadcrumb' %>

<div class="content animate-panel">

<div class="row">
        <div class="col-lg-12" >
            <div class="hpanel">
                <div class="panel-body">
                <%= render 'partials/admin_notices' %>
                <%= form_for [:admin, @post] do |f| %>
                    <% if @post.errors.any? %>
                        <% @post.errors.full_messages.each do |msg| %>
                        <div class="alert alert-danger"> <%= msg %> </div>
                        <% end %>
                    <% end %>

                <div class="form-group col-md-4">
                    <%= f.label :title %>
                    <%= f.text_field :title, class:'form-control' %>
                </div>

                <div class="form-group col-md-4">
                    <%= f.label :category %>
                    <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class:'form-control' %>
                </div>

                <div class="form-group col-md-4">
                    <%= f.label :author %>
                    <%= f.select :user_id, User.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class:'form-control' %>
                </div>

                <div class="form-group col-md-12">
                    <%= f.label :tags %>
                    <%= f.text_area :tags, class:'form-control'  %>
                </div>

                <div class="form-group col-md-12">
                    <%= f.label :body %>
                    <%= f.text_area :body, class:'form-control', id: 'editor' %>
                </div>

                <div class="form-group col-md-12">
                    <%= f.label :image %>
                    <%= f.file_field :image %>
                </div>

                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-2">
                        <%= f.submit "Submit", class: "btn btn-primary" %>
                        <%= link_to "Cancel", admin_posts_path, class: "btn btn-default" %>
                    </div>
                </div>

                <% end %>
            </div>
        </div>
        
    </div>
<div class="row"></div>
<div class="row"></div>
</div>
</div>
<script>
  $(function() {
    $('textarea#editor').froalaEditor({heightMin: 300})
  });
</script>