<div id="wrapper">

<%= render 'partials/admin_breadcrumb' %>

<div class="content animate-panel">

<div class="row">
    <div class="col-lg-12">
        <div class="hpanel">
            <div class="panel-body">

                <%= render 'partials/admin_notices' %>

                <div class="table-responsive">

                <% if @posts.exists? %>

                <table cellpadding="1" cellspacing="1" class="table">
                    <thead>
                    <tr>
                        <th style="width:20%">Title</th>
                        <th style="width:50%">Body</th>
                        <th>Created at</th>
                        <th> Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @posts.each do |post| %>
                    <tr>
                        <td><%= post.title %></td>
                        <td><%= raw post.body.truncate(300) %></td>
                        <td><%= post.created_at.to_time.strftime("%B %e at %l:%M %p" ) %></td>
                        <td>
                         
                        <%= link_to "<i class='fa fa-paste'></i> Edit".html_safe, edit_admin_post_path(post), class:'btn btn-sm btn-info' %> 
                        
                        <%= link_to "<i class='fa fa-trash-o'></i> Delete".html_safe, admin_post_path(post), class:'btn btn-sm btn-danger', method: :delete, data: {confirm: 'Are you sure you want to delete this post?' } %></td>
                     </tr>
                    <% end %>

                    </tbody>
                </table>
                <% else %>
                    <div class="panel-footer">
                        You should create the first post.
                    </div>
                <% end %>
            </div>

            </div>
            <div class="panel-footer">
                <div class="digg_pagination">
                    <span class="page_info">
                      <%= page_entries_info @posts %>
                    </span>
                    <span class="pull-right">
                        <%= will_paginate @posts, :container => false %>
                    </span>
                </div>
        </div>
</div>
<div class="row"></div>
<div class="row"></div>

</div>

</div>