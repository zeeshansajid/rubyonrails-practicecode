<section id="contact">
    <div class="animate-panel content-boxed">
        <div class="row text-center">
            <div class="col-md-6 col-md-offset-3">
                <h2><span class="text-success">Contact with us</span> anytime</h2>
                <p>
                    Please write to us in case of any questions, for information etc.
                </p>
            </div>
        </div>

        <div class="row text-center m-t-lg">
            <div class="col-md-4 col-md-offset-3">

               <%= render 'partials/admin_notices' %>

                <%= form_for @contact, :html => {:class => "form-horizontal center"} do |f| %>

                <div class="form-group">
                    <%= f.label :name, class:"col-sm-2 control-label" %>
                    <div class="col-sm-10">
                    <%= f.text_field :name, required: true, class:'form-control' %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :email, class:"col-sm-2 control-label"  %>
                    <div class="col-sm-10">
                        <%= f.text_field :email, required: true ,class:'form-control' %>
                      </div>
                  </div>

                <div class="form-group">
                    <%= f.label :message, class:"col-sm-2 control-label"  %>
                    <div class="col-sm-10">                    
                    <%= f.text_area :message, as: :text, class:'form-control', cols: "30", rows: "10" %>
                  </div>
                  </div>

                <div class="form-group hidden">
                    <%= f.label :nickname %>
                    <%= f.text_field :nickname, class:'form-control' %>
                  </div>

                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <%= f.submit "Send us a message", class: "btn btn-success" %>
                    </div>
                </div>
                <% end %>


            </div>
            <div class="col-md-3 text-left">
                <address>
                    <strong><span class="navy">Zeeshan Sajid.</span></strong>
                    <br/>
                    USCS Extension <br/>
                    3075 Bowers Avenue<br/>
                    Santa Clara, CA<br/>
                    <abbr title="Phone">P:</abbr> (123) 678-8674
                </address>
            </div>
        </div>


    </div>
</section>